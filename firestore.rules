rules_version = '2';
service cloud.firestore {

  // Determine if the value of the field "key" is the same
  // before and after the request.
  function unchanged(key) {
    return (key in resource.data) 
      && (key in request.resource.data) 
      && (resource.data[key] == request.resource.data[key]);
  }

  match /databases/{database}/documents {
    // Recipes:
    //   - Authenticated user can read
    //   - Authenticated user can create/update (for demo purposes only)
    //   - Updates are allowed if no fields are added and name is unchanged
    //   - Deletes are not allowed (default)
    match /recipes/{recipeId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.resource.data.lastReviewUserId != null;
      // allow write: if true;
      // allow update: if request.auth != null
      //              && unchanged("name");
      
        // Ratings:
        //   - Authenticated user can read
        //   - Authenticated user can create if userId matches
        //   - Deletes and updates are not allowed (default)
        match /ratings/{ratingId} {
          allow read;
          // next line works for writing new reviews, since userId in sent data
          allow write: if request.resource.data.userId != null;
          // allow write: if true;
          // allow create: if request.auth != null;
          // allow update: if request.auth != null
          //              && request.resource.data.userId == request.auth.uid;
      }
    }
    
    // User favorites:
    //   - Users can read/write their own favorites
    match /users/{userId}/favorites/{favoriteId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

